<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.hug.mma.listener.DialogListener" />

        <variable
            name="dialog"
            type="com.hug.mma.model.Dialog" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:minWidth="@dimen/_255sdp"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{dialog.title}"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/_15ssp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{dialog.desc}"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/_13ssp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/please_turn_on_permissions_at_setting_permission"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel"
                style="@style/button_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:onClick="@{() -> callback.cancel()}"
                android:text="@string/cancel"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/_20sdp"
                app:rippleColor="@color/colorAccent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ok"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:onClick="@{() -> callback.ok()}"
                android:text="@{dialog.btnStr}"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/_20sdp"
                app:rippleColor="@color/colorPrimaryDark" />
        </LinearLayout>

    </LinearLayout>
</layout>